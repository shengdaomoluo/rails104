<div class="col-md-12">
  <div class="group">

    <%= link_to("Write a Post", new_group_post_path(@group), class: "btn btf-default pull-right") %>

    <% if current_user && current_user == @group.user %>
      <%= link_to("Edit", edit_group_path(@group), class: "btn btn-primary pull-right")%>
    <% end %>
  </div>
  <h2 class="text-center"><%= @group.title %></h2>
  <p style="font-size:20px;"><%= @group.description %></p>
    <table class="table">
      <th>
        <tr>
          <td> 文章内容 </td>
          <td>发表者<td>
          <td>发表时间</td>
        </tr>
      </th>
      <% @posts.each do |post| %>
      <tr>
        <td><%= post.content %></td>
        <td><%= post.user.email %></td>
        <td><%= post.created_at %></td>
      </tr>
      <% end %>
    </table>
</div>
